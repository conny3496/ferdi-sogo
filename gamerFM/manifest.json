{

  "manifest_version": 2,
  "name": "GamerFM Player",
  "version": "1.0",

  "description": "Adds the official GamerFM-Player as a browser action icon to the toolbar.",
  "homepage_url": "https://gamer.fm/",
  "icons": {
    "48": "logos/48.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "logos/32.png",
    "default_title": "GamerFM",
    "default_popup": "popup/player.html"
  },

  "web_accessible_resources": [
    "logos/logo_organge.png",
    "logos/logo_white.png",
    "logos/icon_orange.png",
    "logos/icon_white.png"
  ]

}
